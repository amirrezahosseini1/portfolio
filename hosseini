<section class="categories">
    <div class="cat" onclick="openPopup('branding')"><span>Branding / هویت بصری</span></div>
    <div class="cat" onclick="openPopup('packaging')"><span>Packaging / بسته‌بندی</span></div>
    <div class="cat" onclick="openPopup('print')"><span>Print Services / خدمات چاپ</span></div>
    <div class="cat" onclick="openPopup('bags')"><span>Shopping Bag / شاپینگ بگ</span></div>
    <div class="cat" onclick="openPopup('cards')"><span>Business Card / کارت ویزیت</span></div>
</section>

<div id="popup">
    <h2 id="popupTitle"></h2>
    <div class="content" id="popupContent"></div>
    <div id="closeBtn" onclick="closePopup()">بستن</div>
</div>

<script>
    // بخش‌های سایت همراه با 15 جای نمونه کار پیش‌فرض
    const data = {
        branding: Array.from({length:15}).map((_,i)=>({ title:`نمونه کار هویت بصری ${i+1}`, image:`branding${i+1}.jpg` })),
        packaging: Array.from({length:15}).map((_,i)=>({ title:`نمونه بسته بندی ${i+1}`, image:`pack${i+1}.jpg` })),
        print: Array.from({length:15}).map((_,i)=>({ title:`نمونه خدمات چاپ ${i+1}`, image:`print${i+1}.jpg` })),
        bags: Array.from({length:15}).map((_,i)=>({ title:`نمونه شاپینگ بگ ${i+1}`, image:`bag${i+1}.jpg` })),
        cards: Array.from({length:15}).map((_,i)=>({ title:`نمونه کارت ویزیت ${i+1}`, image:`card${i+1}.jpg` }))
    };

    const titles = {
        branding: "Branding / هویت بصری",
        packaging: "Packaging / بسته‌بندی",
        print: "Print Services / خدمات چاپ",
        bags: "Shopping Bag / شاپینگ بگ",
        cards: "Business Card / کارت ویزیت"
    };

    function openPopup(cat) {
        const popup = document.getElementById('popup');
        const popupTitle = document.getElementById('popupTitle');
        const popupContent = document.getElementById('popupContent');

        // جلوگیری از اسکرول بدنه اصلی
        document.body.style.overflow = 'hidden';

        // موشن هنگام باز شدن
        popup.style.display = 'flex';
        setTimeout(() => {
            popup.classList.add('show');
        }, 10);
        
        popupTitle.innerText = titles[cat] || '';

        popupContent.innerHTML = '';
        data[cat].forEach(item => {
            const box = document.createElement('div');
            box.className = 'itemBox';
            box.innerHTML = `
                <img src="images/${item.image}" alt="${item.title}">
                <p class="caption">${item.title}</p>
            `;
            popupContent.appendChild(box);
        });
    }

    function closePopup() {
        const popup = document.getElementById('popup');
        
        // موشن هنگام بسته شدن
        popup.classList.remove('show');
        
        // بازگرداندن اسکرول
        document.body.style.overflow = 'auto';

        // تأخیر در پنهان کردن برای تکمیل انیمیشن
        setTimeout(() => {
            popup.style.display = 'none';
        }, 300); // 300ms برابر با مدت زمان transition در CSS است.
    }
</script>

</body>
